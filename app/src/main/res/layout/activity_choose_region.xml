<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseRegionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:title="Choose Region"
        app:titleTextColor="#fff"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/opening" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/region1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Tashkent"
            android:textColor="#141515"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/region2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:alpha="0.7"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Bukhara"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/region3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Samarkand"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>